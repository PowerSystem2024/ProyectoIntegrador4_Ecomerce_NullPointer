# Dockerfile optimizado para Railway
FROM python:3.11-slim

# Variables de entorno
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DJANGO_SETTINGS_MODULE=turno_facil.settings

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Crear directorio de trabajo
WORKDIR /app

# Copiar backend requirements e instalar dependencias Python
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copiar solo el c칩digo del backend
COPY backend/ .

# Crear directorio para archivos est치ticos
RUN mkdir -p /app/staticfiles

# Copiar frontend al directorio static para servir
COPY fronted/ /app/static/

# Recopilar archivos est치ticos
RUN python manage.py collectstatic --noinput || echo "Collectstatic failed, continuing..."

# Exponer puerto (Railway asigna autom치ticamente)
EXPOSE $PORT

# Comando de inicio para Railway
CMD ["sh", "-c", "python manage.py migrate --noinput && python manage.py runserver 0.0.0.0:$PORT"]